<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#449BDC"
    android:backgroundTint="#449BDC"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/shopImage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="center"
        app:srcCompat="@drawable/shopdocas" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="Ballance :"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/ballanc"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Loading"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/coin" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">


        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="290dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/border"
            android:orientation="vertical">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="180dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/robostand" />

            <Button
                android:id="@+id/shop1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="#a17aef"
                android:text="SELECT"
                android:textColor="#FFFFFF"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="290dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:background="@drawable/border"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="180dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/robostandpink" />

            <Button
                android:id="@+id/shop2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="#a17aef"
                android:text="SELECT"
                android:textColor="#FFFFFF"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="290dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="180dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/robostandblue" />

            <Button
                android:id="@+id/shop3"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="#a17aef"
                android:text="SELECT"
                android:textColor="#FFFFFF"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="290dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="180dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/robostandwhite" />

            <Button
                android:id="@+id/shop4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="#a17aef"
                android:text="SELECT"
                android:textColor="#FFFFFF" />

        </LinearLayout>


    </GridLayout>

    <TextView
        android:id="@+id/goBack2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Go to Main menu"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
</LinearLayout>

